extends layout

block content
    h1= "Edit Part"
    div.row
        form(method="post", role="form", class="form-horizontal")
            input(name="_id", type="hidden", value= part._id) 
            - each p in props
                div.form-group
                    div.col-sm-1
                        label(for="editPart"+p.prop)= p.prop
                    div.col-sm-10
                        input(type="text", name= p.prop, id="editPart"+p.prop, value= p.val, class="form-control" )
            div#editPartSubmit
                center 
                    input(type="submit", value="Update", class="btn btn-lg btn-primary")

    a(href="/")!= "Back to Part List"


